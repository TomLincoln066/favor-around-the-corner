<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_upper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/constraint_upper">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView_proposal_progress_item"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/frame_background"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:text="現在知道這個女生叫做Daisy"
                    android:ems="10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:layout_constraintEnd_toStartOf="@id/checkBox"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"
                    tools:text="已掌握電腦出錯問題"/>

                <TextView
                    android:id="@+id/textView_proposal_progress_item2"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:text="已拍下數張他們吃飯照片存證"
                    android:background="@drawable/frame_background"
                    android:ems="10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:layout_constraintEnd_toStartOf="@+id/checkBox2"
                    app:layout_constraintStart_toStartOf="@+id/textView_proposal_progress_item"
                    app:layout_constraintTop_toBottomOf="@+id/textView_proposal_progress_item"
                    tools:text="已能結束藍色螢幕進入開始畫面"/>

                <TextView
                    android:id="@+id/textView_proposal_progress_item3"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/black"
                    android:text="已通知警方並請律師準備提告"
                    android:textSize="20dp"
                    android:background="@drawable/frame_background"
                    android:ems="10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:layout_constraintEnd_toStartOf="@id/checkBox3"
                    app:layout_constraintStart_toStartOf="@+id/textView_proposal_progress_item2"
                    app:layout_constraintTop_toBottomOf="@+id/textView_proposal_progress_item2"
                    tools:text="已能正常使用，並做最後測試。"/>

                <TextView
                    android:id="@+id/textView_proposal_progress_item4"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:text="搞定了。"
                    android:background="@drawable/frame_background"
                    android:ems="10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:layout_constraintEnd_toStartOf="@id/checkBox4"
                    app:layout_constraintStart_toStartOf="@+id/textView_proposal_progress_item3"
                    app:layout_constraintTop_toBottomOf="@+id/textView_proposal_progress_item3"
                    tools:text="測試已正常，待您取貨。"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="進度事項"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    app:layout_constraintStart_toStartOf="@+id/textView_proposal_progress_item"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="完成勾選"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/bg_round_button"
                    android:text="編輯進度事項"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/textView_proposal_progress_item"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView_proposal_progress_item" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/textView_proposal_progress_item2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView_proposal_progress_item2" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/textView_proposal_progress_item3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView_proposal_progress_item3" />

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/textView_proposal_progress_item4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView_proposal_progress_item4" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="369dp"
                    android:layout_height="247dp"
                    android:layout_marginTop="72dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.538"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_proposal_progress_item4" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_search"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="@+id/imageView" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>