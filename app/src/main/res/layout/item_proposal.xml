<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="proposal"
            type="com.tom.helper.source.Proposal" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/image_item_proposal_picture"
            android:layout_width="82dp"
            android:layout_height="110dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/chess_png"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_proposal_provider_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans"
            android:letterSpacing="0.15"
            android:maxLines="2"
            android:textColor="@color/black_3f3a3a"
            android:textSize="15sp"
            android:text="@{proposal.senderName}"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/image_item_proposal_picture"
            app:layout_constraintTop_toTopOf="@+id/image_item_proposal_picture"
            tools:text="Jammmy" />

        <TextView
            android:id="@+id/text_proposal_content_tag"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:text="@string/text_proposal_content_tag"
            app:layout_constraintStart_toStartOf="@+id/text_proposal_provider_name"
            app:layout_constraintTop_toBottomOf="@+id/text_proposal_provider_name" />

        <View
            android:id="@+id/view_item_proposal_separation"
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:layout_marginStart="16dp"
            android:background="@color/gray_cccccc"
            app:layout_constraintBottom_toBottomOf="@+id/text_proposal_content_tag"
            app:layout_constraintStart_toEndOf="@+id/text_proposal_content_tag"
            app:layout_constraintTop_toTopOf="@+id/text_proposal_content_tag" />

        <TextView
            android:id="@+id/text_item_proposal_content"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:letterSpacing="0.15"
            android:text="@{proposal.content}"
            android:textColor="@color/black_3f3a3a"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/view_item_proposal_separation"
            app:layout_constraintStart_toEndOf="@+id/view_item_proposal_separation"
            app:layout_constraintTop_toTopOf="@+id/view_item_proposal_separation"
            app:layout_constraintVertical_bias="0.1"
            tools:text="@string/editText_proposal_content" />

        <Button
            android:id="@+id/button_item_proposal_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/red_d0021b"
            android:text="拒絕"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_item_proposal_accept"
            app:layout_constraintTop_toBottomOf="@+id/text_item_proposal_content" />

        <Button
            android:id="@+id/button_item_proposal_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:text="接受"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_item_proposal_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>