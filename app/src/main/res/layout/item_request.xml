<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.tom.helper.homefragment.HomeViewModel" />


        <variable
            name="task"
            type="com.tom.helper.source.Task" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="3dp"
        android:background="#ffeadb">


        <TextView
            android:id="@+id/textView_request_item_ordinal_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1."
            tools:textSize="18sp" />

        <TextView
            android:id="@+id/textView_request_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@{task.title}"
            app:layout_constraintStart_toStartOf="@id/textView_request_item_ordinal_number"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="My computer crashes, sos........................"
            tools:textSize="18sp" />


        <TextView
            android:id="@+id/Text_progress_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            app:layout_constraintBaseline_toBaselineOf="@id/radioButton_item_1"
            app:layout_constraintStart_toEndOf="@+id/radioButton_item_1"
            app:layout_constraintTop_toBottomOf="@+id/textView_request_item_title"

            tools:text="Check Memory Card" />

        <TextView
            android:id="@+id/Text_progress_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            app:layout_constraintBaseline_toBaselineOf="@id/radioButton_item_2"
            app:layout_constraintStart_toEndOf="@+id/radioButton_item_2"
            app:layout_constraintTop_toBottomOf="@+id/Text_progress_item"

            tools:text="Check CPU Fan" />

        <TextView
            android:id="@+id/Text_progress_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            app:layout_constraintBaseline_toBaselineOf="@id/radioButton_item_3"
            app:layout_constraintStart_toEndOf="@+id/radioButton_item_3"
            app:layout_constraintTop_toBottomOf="@+id/Text_progress_item2"

            tools:text="Reboot" />

        <TextView
            android:id="@+id/Text_progress_item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            app:layout_constraintBaseline_toBaselineOf="@id/radioButton_item_4"
            app:layout_constraintStart_toEndOf="@+id/radioButton_item_4"
            app:layout_constraintTop_toBottomOf="@+id/Text_progress_item3"

            tools:text="Works Again" />

        <RadioButton
            android:id="@+id/radioButton_item_1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"

            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_request_item_title" />

        <RadioButton
            android:id="@+id/radioButton_item_2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButton_item_1" />

        <RadioButton
            android:id="@+id/radioButton_item_3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButton_item_2" />

        <RadioButton
            android:id="@+id/radioButton_item_4"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButton_item_3" />

        <Button
            android:id="@+id/button_item_request_send_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#f5c3bc"
            android:text="@string/button_item_request_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar_item_request"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Text_progress_item4"
            app:layout_constraintVertical_bias="0.156" />

        <TextView
            android:id="@+id/textView_task_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="68dp"
            android:text="@{task.taskCreator}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_task_creator_blank"
            tools:text="Tom" />

        <TextView
            android:id="@+id/textView_task_creator_blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="68dp"
            android:text="@string/textView_task_creator_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView_task_create_time_blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/textView_task_create_time_blank"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_task_creator_blank"
            tools:text="發案時間 :" />

        <TextView
            android:id="@+id/textView_task_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"

            app:layout_constraintStart_toEndOf="@+id/textView_task_create_time_blank"
            app:layout_constraintTop_toBottomOf="@+id/textView_task_creator"
            tools:text="1小時前" />

        <TextView
            android:id="@+id/textView_proposals_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/textView_proposals_word"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_task_create_time_blank" />

        <TextView
            android:id="@+id/textView_proposals_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/textView_proposals_numbers"
            app:layout_constraintStart_toEndOf="@+id/textView_proposals_word"
            app:layout_constraintTop_toBottomOf="@+id/textView_task_create_time" />

        <Button
            android:id="@+id/button_mission_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="#e89da2"
            android:text="@string/button_mission_detail"
            app:layout_constraintBaseline_toBaselineOf="@id/button_item_request_send_out"
            app:layout_constraintEnd_toStartOf="@+id/button_item_request_send_out" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>


