<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.tom.helper.profile.ProfileViewModel" />

        <import type="android.view.View" />

        <variable
            name="user"
            type="com.tom.helper.source.User" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/constraint_out"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ecf3f9"
        android:padding="8dp"
        tools:context=".profile.ProfileFragment">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/constraint_out">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_upper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_inner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="129dp"
                        android:layout_height="129dp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:imageUrl="@{user.image}"
                        app:srcCompat="@drawable/icons_36px_profile_normal" />

                    <TextView
                        android:id="@+id/profile_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{user.name}"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        app:layout_constraintBottom_toBottomOf="@+id/profile_image"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.46"
                        app:layout_constraintStart_toEndOf="@+id/profile_image"
                        app:layout_constraintTop_toTopOf="@+id/profile_image" />

                    <TextView
                        android:id="@+id/posts_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/line2"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/line2" />

                    <TextView
                        android:id="@+id/posts_count_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Posts"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/line2"
                        app:layout_constraintEnd_toEndOf="@+id/posts_count"
                        app:layout_constraintStart_toStartOf="@+id/posts_count" />

                    <TextView
                        android:id="@+id/proposals_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/line3"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/line2"
                        app:layout_constraintTop_toTopOf="@+id/line3" />

                    <TextView
                        android:id="@+id/proposal_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proposals"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/line3"
                        app:layout_constraintEnd_toEndOf="@+id/proposals_count"
                        app:layout_constraintStart_toStartOf="@+id/proposals_count" />

                    <TextView
                        android:id="@+id/finished_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/line3"
                        app:layout_constraintTop_toTopOf="@+id/line3" />

                    <TextView
                        android:id="@+id/finished_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Finished"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/line3"
                        app:layout_constraintEnd_toEndOf="@+id/finished_count"
                        app:layout_constraintStart_toStartOf="@+id/finished_count" />

                    <View
                        android:id="@+id/line2"
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/proposal_text"
                        app:layout_constraintEnd_toStartOf="@+id/proposals_count"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/posts_count"
                        app:layout_constraintTop_toTopOf="@+id/proposals_count" />

                    <View
                        android:id="@+id/line3"
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/black"
                        app:layout_constraintEnd_toStartOf="@+id/finished_count"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/proposals_count"
                        app:layout_constraintTop_toBottomOf="@+id/profile_image" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_inner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/constraint_inner1">


                    <TextView
                        android:id="@+id/textView_clicked_to_open_my_tasks"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center_vertical"
                        android:text="檢視我的任務及提案"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView_clicked_to_open_my_tasks"
                        app:layout_constraintEnd_toStartOf="@id/imageView_clicked_to_open_my_tasks"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/imageView_clicked_to_open_my_tasks" />


                    <ImageView
                        android:id="@+id/imageView_clicked_to_open_my_tasks"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="8dp"
                        android:onClick="@{()->viewModel.clickExpandThisRecycler()}"
                        android:src="@drawable/baseline_keyboard_arrow_down_black_18"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.82"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/profile_my_tasks_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="8dp"
                        android:visibility="@{viewModel.shouldExpandThisRecycler == true ? View.VISIBLE :View.GONE }"
                        app:addTasksOfMineForProfile="@{viewModel.tasks}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/imageView_clicked_to_open_my_tasks"
                        tools:listitem="@layout/item_task_of_my_for_profile_page" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>






