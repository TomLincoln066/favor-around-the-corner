<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按壓時 -->
    <item android:state_pressed="true">
        <!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
        <shape android:shape="rectangle">
            <!--設定圓角，當設置的圓角半徑很大，就可變成弧形邊了-->
            <corners android:bottomLeftRadius="15dip" android:topLeftRadius="15dip" />
            <!--邊框-->
            <stroke android:width="1dip" android:color="#538394" />
            <!--漸層顏色-->
            <gradient android:angle="-90" android:startColor="#0099CC" android:endColor="#017DAB"  />
        </shape>
    </item>

    <!-- 預設時 -->
    <item android:color="@color/red_d0021b">
        <shape android:shape="rectangle"  >
            <corners android:bottomLeftRadius="15dip" android:topLeftRadius="15dip" />
            <stroke android:width="1dip" android:color="#ffe4e1" />
            <gradient android:angle="-90" android:startColor="#ffe4e1" android:endColor="#ffe4e1"  />
        </shape>
    </item>

</selector>
